<p id="notice"><%= notice %></p>

<h1>Método de transporte</h1>
<button class="btn2 btn-danger btn-lg"
onclick="window.location.href = '/m_ts/new'">
Nuevo
</button>

<br>
<% if @mts.count == 0 %>
  <img src="/assets/0.png" alt="Mountain View" class="espaciolibre">
  <%else %>
<table id="Datatable" data-src="buyers" class="table scroll table-striped table-bordered">
  <thead>
    <tr>
    <th>#</th>
    <th>Nombre</th>
    <th>Descripción</th>
      <th colspan="3">Opciones</th>
    </tr>
  </thead>

  <tbody>
    <% @mts.each_with_index do |mt, index| %>
      <tr>
        <td><%= index + 1 %></td>
      <td><%= mt.name %></td>
      <td><%= mt.description %></td>
        <td><%= link_to 'Mostrar', mt %></td>
        <td><%= link_to 'Editar', edit_mt_path(mt) %></td>
        <td><%= link_to 'Eliminar', mt, method: :delete, data: { confirm: '¿Está seguro(a)?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


