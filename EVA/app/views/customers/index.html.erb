<p id="notice"><%= notice %></p>

<h1>Clientes</h1>
<button class="btn2 btn-danger btn-lg"
onclick="window.location.href = '/customers/new'">
Nuevo
</button>
<br>
<% if @customers.count == 0 %>
  <img src="/assets/0.png" alt="Mountain View" class="espaciolibre">
  <%else %>
<table id="Datatable" data-src="customers" class="table scroll table-striped table-bordered">
  <thead>
    <tr>
     <th> <button>#</button></th>
       <th>Nombre</th>
       <th>Dirección</th>
       <th>Compañia</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @customers.each_with_index do |customer, index| %>
      <tr>
      <td><%= index + 1 %></td>
      <td><%= customer.names%> <%= customer.lastnames%> </td>
      <td><%=customer.address%></td>
      <td><%= customer.company_id %></td>
        <td><%= link_to 'Show', customer %></td>
        <td><%= link_to 'Edit', edit_customer_path(customer) %></td>
        <td><%= link_to 'Destroy', customer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
 <% end %>
<br>

