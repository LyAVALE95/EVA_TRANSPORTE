<p id="notice"><%= notice %></p>

<h1>Licencias</h1>
<button class="btn2 btn-danger btn-lg"
onclick="window.location.href = '/licenses/new'">
Nuevo
</button>
<br>
<% if @licenses.count == 0 %>
  <img src="/assets/0.png" alt="Mountain View" class="espaciolibre">
  <%else %>
<table  id="Datatable" data-src="buyers" class="table scroll table-striped table-bordered">
  <thead>
    <tr>
      <th>#</th>
      <th>Tipo</th>
      <th>Costo</th>
      <th>Válido</th>
      <th colspan="3">Opciones</th>
    </tr>
  </thead>

  <tbody>
    <% @licenses.each_with_index do |license, index| %>
      <tr>
      <td><%= index + 1 %></td>
      <td><%= license.type_license %></td>
      <td><%= license.cost %></td>
      <td><%= license.validity %></td>
        <td><%= link_to 'Mostrar', license %></td>
        <td><%= link_to 'Editar', edit_license_path(license) %></td>
        <td><%= link_to 'Eliminar', license, method: :delete, data: { confirm: '¿Está seguro(a)?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<% end %>
<br>


