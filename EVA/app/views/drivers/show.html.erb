<% if user_signed_in? %>
<%= link_to 'Editar', edit_driver_path(@driver) %> |
<%= link_to 'Volver', drivers_path %>
<p id="notice"><%= notice %></p>
<div class="showtemp">
<% if @driver.active  %>
 
  <% if @driver.rfc != '' && @driver.hiredDate && @driver.code != '' && @driver.department != ''   %>
  <div id="activo">Activo</div>
  
  <%else%>
   <div id="activo">Activo</div>
    <div id="activop">Registro de conductor incompleto</div>
  <%end%>
  <%else%>
    <div id="inactivo">Inactivo</div>
  <%end%>
  
  <p>
  <strong>Código:</strong>
  <%= @driver.code %>
	</p>
 <p>
  <strong>Departamento:</strong>
  <%= @driver.department %>
	</p>
	 <p>
  <strong>Conductor:</strong>
  <%= @driver.names %>  <%= @driver.lastnames %>
	</p>
 <p>
  <strong>RFC:</strong>
  <b><%= @driver.rfc %></b>
	</p>
	 <p>
  <strong>Fecha de ingreso:</strong>
  <%= @driver.hiredDate %>
	</p>
</div>
<div id="activop" class="">Unidad(es) de transporte</div>
<div class="padbutton">
  <button class="btn2 btn-danger btn-lg btntoggleform">
+Nueva unidad de transporte
</button>
</div>
<div class="showtemp col-md-6">
<table id="Datatable" class="table scroll table-striped table-bordered">
  <thead>
    <tr>
    <th>#</th>
    <th>Tipo</th>
    <th>Modelo</th>
     <th>Calidad</th>
      <th>Distancia recorrida</th>
       <th>Llantas</th>
        <th>Gasolina</th>
         <th>Capacidad de carga</th>
      <th colspan="3">Opciones</th>
    </tr>
  </thead>

  <tbody>
    <% @driver.trucks.each_with_index do |truck, index| %>
      <tr>
      <td> <%= index + 1 %></td>
      <td><%= truck.enrollment %></td>
      <td><%= truck.model %></td>
      <td><%= truck.quality %></td>
      <td><%= truck.mileage%></td>
        <td><%= truck.wheels %></td>
        <td><%= truck.gas %></td>
        <td><%= truck.loadCapacity %></td>
        <td>
        <div class="dropdown">
    <button class="btn btn-warning btn-options dropdown-toggle" type="button" data-toggle ="dropdown">Opciones
    <span class="caret"></span></button>
    <ul class="dropdown-menu">
        <li><%= link_to 'Mostrar', truck %></li>
        <li><%= link_to 'Editar', edit_truck_path(truck) %></li>
        <li><%= link_to 'Eliminar', truck, method: :delete, data: { confirm: '¿Está seguro(a)?' } %></li>
    </ul>
      </div>
      </td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<%end%>
<div class="formulario col-md-12">
<%= render 'trucks/form', truck: @truck %>
</div>