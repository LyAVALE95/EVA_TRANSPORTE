<p id="notice"><%= notice %></p>

<h1>Locations</h1>
<button class="btn2 btn-danger btn-lg"
onclick="window.location.href = '/stands/new'">
Nuevo
</button>

<br>
<% if @locations.count == 0 %>
  <img src="/assets/0.png" alt="Mountain View" class="espaciolibre">
  <%else %>
<table id="Datatable" data-src="buyers" class="table scroll table-striped table-bordered">
  <thead>
    <tr>
      <th> <button>#</button></th>
      <th>Nombre</th>
      <th>RFID</th>
      <th>Dirección</th>
      <th>Región</th>
      <th>C.P.</th>
      <th colspan="3">Opciones</th>

    </tr>
  </thead>

  <tbody>
    <% @locations.each_with_index do |location, index| %>
      <tr>
      <td> <%= index + 1 %></td>
      <td> <%= location.name %></td>
      <td><%= location.RFID %></td>
      <td><%= location.address %></td>
      <td><%= location.region %></td>
      <td><%= location.zipCode %></td>
      
        <td><%= link_to 'Mostrar', location %></td>
        <td><%= link_to 'Editar', edit_location_path(location) %></td>
        <td><%= link_to 'Eliminar', location, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<% end %>
<br>

