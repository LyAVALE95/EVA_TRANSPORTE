<p id="notice"><%= notice %></p>

<h1>Cargas</h1>
<button class="btn2 btn-danger btn-lg"
onclick="window.location.href = '/loads/new'">
Nuevo
</button>

<br>
<% if @loads.count == 0 %>
  <img src="/assets/0.png" alt="Mountain View" class="espaciolibre">
  <%else %>
<table id="Datatable" data-src="buyers" class="table scroll table-striped table-bordered">
  <thead>
    <tr>
    <th>Fecha de arribo</th>
    <th>Costo</th>
    <th>Cliente</th>
    <th>Línea de transporte</th>
      <th colspan="3">Opciones</th>
    </tr>
  </thead>

  <tbody>
    <% @loads.each_with_index do |load, index| %>
      <tr>
        <td><%= load.arrivalDate %></td>
           <td><%= load.cost %></td>
             <td><%= load.customer_id %></td>
               <td><%= load.carrier_line_id %></td>
        

        <td><div class="dropdown">
    <button class="btn btn-warning btn-options dropdown-toggle" type="button" data-toggle ="dropdown">Opciones
    <span class="caret"></span></button>
    <ul class="dropdown-menu">
        <li><%= link_to 'Mostrar', load %></li>
        <li><%= link_to 'Editar', edit_load_path(load) %></li>
        <li><%= link_to 'Eliminar', load, method: :delete, data: { confirm: '¿Está seguro(a)?' } %></li>
    </ul>
      </div></td>
      </tr>
    <% end %>
  </tbody>
</table>
   <% end %>
<br>

