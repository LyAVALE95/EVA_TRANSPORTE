<p id="notice"><%= notice %></p>

<h1>Paquetes</h1>
<button class="btn2 btn-danger btn-lg"
onclick="window.location.href = '/packages/new'">
Nuevo
</button>

<br>
<% if @packages.count == 0 %>
  <img src="/assets/0.png" alt="Mountain View" class="espaciolibre">
  <%else %>
<table id="Datatable" data-src="buyers" class="table scroll table-striped table-bordered">
  <thead>
    <tr>
      <th >ID</th>
      <th>Cantidad</th>
       <th>Costo</th>
       <th>Tamaño</th>
       <th>Peso</th>
       <th>Estructura</th>
       <th>Carga</th>
       <th>Estado</th>
       <th>Opciones</th>
    </tr>
  </thead>

  <tbody>
    <% @packages.each_with_index do |package, index| %>
      <tr>
        <td><%= index + 1%></td>
        <td><%=package.quantity%></td>
        <td><%=package.cost%></td>
        <td><%=package.size%></td>
        <td><%=package.weigth%></td>
        <td><%=package.type_scaffold_id%></td>
        <td><%=package.load_id%></td>
        <td><%=package.state_id%></td>
         <td>
        <div class="dropdown">
    <button class="btn btn-warning btn-options dropdown-toggle" type="button" data-toggle ="dropdown">Opciones
    <span class="caret"></span></button>
    <ul class="dropdown-menu">
        <li><%= link_to 'Mostrar', package %></li>
        <li><%= link_to 'Editar', edit_package_path(package) %></li>
        <li><%= link_to 'Eliminar', package, method: :delete, data: { confirm: '¿Esta seguro(a)?' } %></li>
    </ul>
      </div>
    </td>
      </tr>
    <% end %>
  </tbody>
</table>
  <% end %>
<br>


