<p id="notice"><%= notice %></p>

<%= link_to 'Edit', edit_clientcontact_path(@clientcontact) %> |
<%= link_to 'Back', clientcontacts_path %>
<div class="showtemp">
<% if @clientcontact.active  %>
 
       <% if @clientcontact.tel != '' && @clientcontact.mail && @clientcontact.movil != '' %>
