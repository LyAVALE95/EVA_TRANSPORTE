    <div id="inactivo">Inactivo</div>
  <%end%>
  <p>
  <strong>Nombre:</strong>
  <%= @clientcontact.names %>  <%= @clientcontact.lastnames %>
</p>
<p>
  <strong>Nota:</strong>
  <%= @clientcontact.note %>  
</p>
<p>
  <strong>Teléfono:</strong>
  <%= @clientcontact.tel %>  
</p>
<p>
  <strong>Teléfono móvil:</strong>
  <%= @clientcontact.movil %>  
</p>
