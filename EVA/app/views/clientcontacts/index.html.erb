<p id="notice"><%= notice %></p>

<h1>Contactos de clientes</h1>

<button class="btn2 btn-danger btn-lg"
onclick="window.location.href = '/clientcontacts/new'">
Nuevo
</button>

<% if @clientcontacts.count == 0 %>
  <img src="/assets/0.png" alt="Mountain View" class="espaciolibre">
  <%else %>
<table>
  <thead>
    <tr>
          <th>Nombre</th>
          <th>Razón Social</th>
          <th>Telefóno</th>
          <th>Correo electrónico</th>
          <th>Negocio</th>
          <th>Código</th>


      <th colspan="3">Opciones</th>
    </tr>
  </thead>

  <tbody>
    <% @clientcontacts.each do |clientcontact| %>
      <tr>
      <td><%= clientcontact.name%></td>
          <td><%= clientcontact.legalName%></td>
              <td><%= clientcontact.tel%></td>
                  <td><%= clientcontact.mail%></td>
                      <td><%= clientcontact.comercialBusiness%></td>
                          <td><%= clientcontact.code%></td>
        <td><%= link_to 'Mostrar', clientcontact %></td>
        <td><%= link_to 'Editar', edit_clientcontact_path(clientcontact) %></td>
        <td><%= link_to 'Eliminar', clientcontact, method: :delete, data: { confirm: '¿Está seguro(a)?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
    <% end %>
<br>

