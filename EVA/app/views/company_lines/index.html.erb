<p id="notice"><%= notice %></p>

<h1>Líneas de transporte-Compañias</h1>
<button class="btn2 btn-danger btn-lg"
onclick="window.location.href = '/company_lines/new'">
Nuevo
</button>
<br>
<% if @company_lines.count == 0 %>
  <img src="/assets/0.png" alt="Mountain View" class="espaciolibre">
  <%else %>
<table id="Datatable" data-src="buyers" class="table scroll table-striped table-bordered">
  <thead>
    <tr>
       <th>Línea transportista</th>
       <th>Compañia</th>
      <th colspan="3">Opciones</th>
    </tr>
  </thead>

  <tbody>
    <% @company_lines.each_with_index do |company_line, index| %>
      <tr>
        <td> <%= index + 1 %></td>
      <td><%= company_line.carrier_line_id%></td>
      <td><%= company_line.company_id%></td>
        <td><%= link_to 'Show', company_line %></td>
        <td><%= link_to 'Edit', edit_company_line_path(company_line) %></td>
        <td><%= link_to 'Destroy', company_line, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
 <% end %>
<br>
