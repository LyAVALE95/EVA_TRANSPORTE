<p id="notice"><%= notice %></p>

<h1>Auditorías</h1>
<button class="btn2 btn-danger btn-lg"
onclick="window.location.href = '/audits/new'">
Nuevo
</button>

<br>
<% if @audits.count == 0 %>
  <img src="/assets/0.png" alt="Mountain View" class="espaciolibre">
  <%else %>
<table id="Datatable" data-src="buyers" class="table scroll table-striped table-bordered">
  <thead>
    <tr>
       <th> <button>#</button></th>
       <th>Resultados</th>
       <th>Descripción</th>
       <th>Fecha</th>
      <th colspan="3">Opciones</th>
    </tr>
  </thead>

  <tbody>
    <% @audits.each_with_index  do |audit, index| %>
      <tr>
         <td> <%= index + 1 %></td>
        <td><%= audit.results %></td>
        <td><%= audit.description %></td>
         <td><%= audit.created_at.to_s %> </td>


        <td><%= link_to 'Mostrar', audit %></td>
        <td><%= link_to 'Editar', edit_audit_path(audit) %></td>
        <td><%= link_to 'Eliminar', audit, method: :delete, data: { confirm: '¿Está seguro(a)?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
    <% end %>
<br>


