<div id="FirstContainer" class="col-md-12 block">
  <div class="col-md-12 block">
<p id="notice"><%= notice %></p>

<h1>Auditorías</h1>

   <button class="btn2 btn-danger btn-lg"
onclick="window.location.href = '/audits/new'">
Nuevo
</button>
<br><br>
<% if @audits.count == 0 %>
  <img src="/assets/0.png" alt="Mountain View" class="espaciolibre">
  <%else %>
<table id="Datatable" data-src="audits" class="table display scroll table-striped table-bordered Optional">
  <thead>
    <tr>
       <th> <button>#</button></th>
       <th>Resultados</th>
       <th>Descripción</th>
       <th>Fecha</th>
        <th class="Optionsth">Opciones</th>
    </tr>
  </thead>

  <tbody>
    <% @audits.each_with_index  do |audit, index| %>
      <tr data-id="<%= index %>">
         <td> <%= index + 1 %></td>
        <td><%= audit.results %></td>
        <td><%= audit.description %></td>
         <td><%= audit.created_at.to_s %> </td>
         <td>
        <div class="dropdown">
    <button class="btn btn-warning btn-options dropdown-toggle" type="button" data-toggle ="dropdown">Opciones
    <span class="caret"></span></button>
    <ul class="dropdown-menu">
        <li><%= link_to 'Mostrar', audit %></li>
        <li><%= link_to 'Editar', edit_audit_path(audit) %></li>
        <li><%= link_to 'Eliminar', audit, method: :delete, data: { confirm: 'Are you sure?' } %></li>
    </ul>
      </div>
    </td>
      </tr>
    <% end %>
  </tbody>
</table>
    <% end %>
<br>
</div>
</div>

<div id="SecondContainer" class="col-md-1 block">
  <div class="tab-content">

    <div id="sectionA" class="tab-pane fade in active">
      <span id="RowDetails">
        <h3>XYZ</h3>
     
      </span>
    </div>
    <div id="sectionB" class="tab-pane fade">
      <%= render 'form', audit: @audit %>&nbsp;
     
    </div>
  </div>
</div>
