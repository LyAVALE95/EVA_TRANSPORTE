<% if current_user.company_id? %>
<div class="col-md-12 block">
<p id="notice"><%= notice %></p>

<%= link_to '<button type="button" class="btn btn-success">Nuevo Usuario</button>'.html_safe, new_users_admin_path %>
</br></br>

<table id="userDataTable" data-src="users_admin" class="table table-striped table-bordered" cellspacing="0" width="100%">
  <thead>
    <tr>
      <th>ID</th>
      <th>Nombres</th>
      <th>Apellidos</th>
      <th>Rol</th>
      <th>Correo electrónico</th>
      <th>Última conexión</th>
      <th class="Optionsth">Opciones</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each_with_index do |user,index| %>
    <tr>
   

      <td> 
          <%if DateTime.now.utc.to_date == user.birthday.to_s.to_date%>
         <% image_tag( "/assets/gift.png" , :alt => "rss feed", :class => "pictureboxmin");%>
         <img src="/assets/gift.png" alt="Mountain View" class="pictureboxmin">
      <%else%>
      
     <%= index + 1 %>
        <%end%>
      </td>
      <td> <%= user.birthday.to_s.to_date %></td>
      <td> <%= user.lastName %></td>
      <td> <%= user.rol %></td>
      <td> <%= user.email %></td>
      <td> <%= user.last_sign_in_at %></td>
     
      <td>
        <div class="dropdown">
    <button class="btn btn-warning btn-options dropdown-toggle" type="button" data-toggle ="dropdown">Opciones
    <span class="caret"></span></button>
    <ul class="dropdown-menu">
        <li><a href="/users_admin/<%=user.id%>">Mostrar</a></li>
        <li> <%= link_to 'Editar', edit_users_admin_path(user) %></li>
        <li><%= link_to 'Eliminar', users_admin_path(user), method: :delete, data: { confirm: '¿Está seguro(a)?' } %></li>
    </ul>
      </div>
    </td>

    </tr>
    <% end %>
  </tbody>
</table>
</div>
<%else %>
<h1>Mi compañia</h1>
<img src="/assets/Bienvenido.png" alt="Mountain View" class="sincompania">
<button class="btn2 btn-warning btn-lg btnhard"
 style="width: 500px;margin-left: 350px;height: 100px;
 margin-top: 10px;"
 onclick="window.location.href = '/companies/new'">
<b>Crear mi compañia</b>
</button>

<%  end %>