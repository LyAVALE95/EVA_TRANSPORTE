<%= form_with(model: @users, local: true, class: "form-horizontal") do |form| %>
  <% if @user.errors.any? %>
    <div id="error_explanation" class="alert alert-danger">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>


      <ul>
      <% user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class="col-md-12 block">
 <div class="form-group">
            <%= form.label :name,"Nombres", class: "control-label  col-sm-1" %>
              <div class="col-sm-11 ">
                <%= form.text_field :name, id: :location_name, class: "form-control border",value: @user.name %>
              </div>
          </div>

 <div class="form-group">
            <%= form.label :lastName,"Apellidos", class: "control-label  col-sm-1" %>
              <div class="col-sm-11 ">
                <%= form.text_field :lastName, id: :location_name, class: "form-control border",value: @user.lastName %>
              </div>
          </div>

  <div class="form-group">
            <%= form.label :email,"Correo electrónico", class: "control-label  col-sm-1" %>
              <div class="col-sm-11 ">
                <%= form.text_field :email, id: :location_name, class: "form-control border",value: @user.email %>
              </div>
          </div>
           <div class="form-group">
            <%= form.label :birthday,"Fecha de nacimiento", class: "control-label  col-sm-1" %>
              <div class="col-sm-11 ">
                <%= form.text_field :birthday, id: :user_birthday , class: "form-control border datepicker",value: @user.birthday %>
              </div> 
          </div>
           <div class="form-group">
            <%= form.label :schedule,"Horario", class: "control-label  col-sm-1" %>
              <div class="col-sm-11 ">
                <%= form.text_field :schedule, id: :user_schedule , class: "form-control border",value: @user.schedule %>
              </div> 
          </div>
           <div class="form-group">
            <%= form.label :category,"Categoría", class: "control-label  col-sm-1" %>
              <div class="col-sm-11 ">
                <%= form.text_field :category, id: :user_category , class: "form-control border",value: @user.category %>
              </div> 
          </div>
            <div class="form-group">
            <%= form.label :section,"Sección", class: "control-label  col-sm-1" %>
              <div class="col-sm-11 ">
                <%= form.text_field :section, id: :user_section, class: "form-control border",value: @user.section %>
              </div> 
          </div> 
          <div class="form-group">
            <%= form.label :RFC,"RFC", class: "control-label  col-sm-1" %>
              <div class="col-sm-11 ">
                <%= form.text_field :RFC, id: :user_RFC , class: "form-control border",value: @user.RFC %>
              </div> 
          </div>
          <div class="form-group">
            <%= form.label :active,"Activo", class: "control-label  col-sm-1" %>
              <div class="col-sm-11 ">
               <%= form.check_box :active, id: :user_active , class: "form-control border",value: @user.active, checked:  @user.active %>
               
              </div>
          </div>
<% if @user.new_record?%>
  <div class="form-group">
    <%= form.label :password,"Contraseña", class: "control-label col-sm-1" %>
    <div class="col-sm-11">
      <%= form.password_field :password, id: :user_password, class: "form-control border",value: @user.password %>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :password_confirmation,"Confirmar contraseña", class: "control-label col-sm-1" %>
    <div class="col-sm-11">
      <%= form.password_field :password_confirmation, id: :user_password_confirmation, class: "form-control border",value: @user.password %>
    </div>
  </div>
<%end %>
  <div class="form-group">
    <%= form.label :rol, class: "control-label col-sm-1" %>
      <div class="col-sm-11">
        <%= form.select(:rol, options_for_select(['Transportista','Cliente', 'Conductor'],:selected => @user.rol),{}, { :class => 'form-control border', id: :user_rol }) %>
      </div>
  </div>
     <div class="form-group">
                  <%= form.label :user_img,'img', class: "control-label col-sm-1" %>
                  <div class="col-sm-11">
                    <%= form.file_field :user_img, class: "form-control", :value => @user.user_img %>
                  </div>
                </div>
</div>
<div class="col-md-12 block">
    <%= form.submit class: "btn btn-success" %>
</div>
 


<% end %>
